%article#main-content
  %ul#app-list
    - data.apps.each do |a|
      %li{class: "app-item #{a.shortname}"}
        %a{href: "#{a.downloadURL}", title: "Download #{a.name}"}
          %img{src: "/images/apps/#{a.shortname}.png", alt: "#{a.name}", title: "#{a.name}", width: 256, height: 256}
        .tooltip
          %h3= a.name
          %ul
            %li
              %a{href: "#{a.developerURL}"}= a.developer
            %li= a.category
          %p= a.description