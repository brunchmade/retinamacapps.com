		= yield

		%script{type: "text/javascript", src: "https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"}
		%script{type: "text/javascript", src: "javascripts/retina.js"}
		%script{type: "text/javascript", src: "javascripts/wufoo-submit.js"}
